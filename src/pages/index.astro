---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { LinkButton } from '@astrojs/starlight/components';

import '../index.css';
---
<StarlightPage frontmatter={{ template: 'splash', title: 'Annotorious'  }}>
  <div class="center">
    <div class="hero">
      <h1>Annotorious</h1>
      <p>A JavaScript library for image annotation</p>
      <LinkButton href="/getting-started/">Get started</LinkButton>
    </div>

    <div class="glow" />
    <div class="browser-mockup with-url">
      <div class="placeholder" />
    </div>
  </div>
</StarlightPage>

<style>
  :global(main > .content-panel:first-child) {
    display: none;
  }

  body {
    font-family: 'Nunito Sans';
  }

  .hero {
    align-items: center;
    display: flex;
    flex-direction: column;
    font-family: Raleway;
    font-size: 1.2rem;
    font-weight: 500;
    justify-content: center;
    margin-bottom: 4rem;
    margin-top: 3rem;
  }

  h1 {
    font-family: Megrim;
    font-size: 2.5rem !important;
    margin: 0;
  }

  .placeholder {
    aspect-ratio: 16/9;
    background-color: #fff;
    border-radius: 0 0 0.75rem 0.75rem;
  }

  .center {
    margin: 0 auto;
    max-width: 920px;
  }

  .glow {
    background: linear-gradient(90deg, rgb(246, 158, 28) 0%, rgb(220, 40, 40) 26.5625%, rgb(39, 100, 235) 64%, rgb(22, 163, 74) 100%);
    filter: blur(100px);
    width: 700px;
    height: 500px;
    position: absolute;
    opacity: 0.3;
  }

  .browser-mockup {
    border-top: 3em solid rgba(230, 230, 230, 0.7);
    box-shadow: 0 0.1em 1em 0 rgba(0, 0, 0, 0.4);
    position: relative;
    border-radius: 0.75rem;
  }

  .browser-mockup:before {
    display: block;
    position: absolute;
    content: '';
    top: -1.75em;
    left: 1.25em;
    width: 0.5em;
    height: 0.5em;
    border-radius: 50%;
    background-color: #f44;
    box-shadow: 0 0 0 2px #f44, 1.5em 0 0 2px #9b3, 3em 0 0 2px #fb5;
  }

  .browser-mockup.with-url:after {
    display: block;
    position: absolute;
    content: '';
    top: -1.6em;
    left: 5.5em;
    width: calc(100% - 6em);
    height: 1.2em;
    border-radius: 2px;
    background-color: white;
  }

  .browser-mockup > * {
    display: block;
  }
</style>
