--- 
import { ArrowRight, Handshake, MessagesSquare, MonitorSmartphone, Puzzle, Rocket, Wrench } from 'lucide-react';
import { Bluesky, Github, Mastodon } from 'simple-icons-astro';
import { CodeCarousel, GridPattern, SplashDemo } from '../components/splash-page';
import Card from './_card.astro';

import '../index.css';

const title = 'Annotorious | Image Annotation Library for JavaScript, TypeScript and React';

const description = 'Open-source JavaScript image annotation library with TypeScript and React support. Add image annotation to your web app with a few lines of code. Works with OpenSeadragon and IIIF.';
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{title}</title>

    <link rel="canonical" href="https://annotorious.dev/" />

    <link rel="icon" type="image/png" sizes="180x180" href="/images/annotorious-touch-icon.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/images/annotorious-touch-icon.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/images/annotorious-touch-icon-152.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/images/annotorious-touch-icon-144.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/images/annotorious-touch-icon-114.png" />
    <link rel="apple-touch-icon" sizes="72x72" href="/images/annotorious-touch-icon-144.png" />
    <link rel="apple-touch-icon" sizes="57x57" href="/images/annotorious-touch-icon-114.png" />
    <link rel="apple-touch-icon" href="/images/annotorious-touch-icon.png">

    <meta name="description" content={description}>

    <meta name="twitter:title" content={title} />
    <meta name="twitter:image:src" content="https://annotorious.dev/images/annotorious-social-large.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:description" content={description}>

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description}>
    <meta property="og:url" content="https://annotorious.dev" />
    <meta property="og:image" content="https://annotorious.dev/images/annotorious-social-large.png" />
    <meta property="og:type" content="object" />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "Annotorious",
        "applicationCategory": "DeveloperApplication",
        "operatingSystem": "Web Browser",
        "description": "JavaScript image annotation library with TypeScript and React support",
        "programmingLanguage": ["JavaScript", "TypeScript"],
        "softwareVersion": "3.0",
        "releaseNotes": "https://github.com/annotorious/annotorious",
        "softwareHelp": "https://annotorious.dev/getting-started",
        "url": "https://annotorious.dev",
        "downloadUrl": "https://www.npmjs.com/package/@annotorious/annotorious",
        "codeRepository": "https://github.com/annotorious/annotorious",
        "license": "https://opensource.org/licenses/BSD-3-Clause",
        "keywords": "javascript, typescript, react, image annotation, annotation library, openseadragon, iiif"
      }
    </script>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": [{
          "@type": "Question",
          "name": "What is Annotorious?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Annotorious is an open-source JavaScript library for adding image annotation functionality to web applications. It provides full TypeScript support and official React bindings for React image annotation."
          }
        }, {
          "@type": "Question",
          "name": "Does Annotorious support React?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, Annotorious includes official React bindings for seamless React image annotation integration."
          }
        }, {
          "@type": "Question",
          "name": "Is TypeScript supported?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, Annotorious is built with TypeScript and includes complete type definitions for TypeScript image annotation development."
          }
        }, {
          "@type": "Question",
          "name": "Does Annotorious work on mobile devices?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, Annotorious supports touch interactions and works on desktop and mobile devices for JavaScript image annotation."
          }
        }, {
          "@type": "Question",
          "name": "Why should I choose Annotorious as a JavaScript image annotation library?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Annotorious is a popular open-source JavaScript image annotation library with TypeScript support, React bindings, and touch support. It's free for personal and commercial use and works with OpenSeadragon and IIIF."
          }
        }]
      }
    </script>
  </head>

  <body>
    <header>
      <a href="#professional-services">
        <Handshake size={22} strokeWidth={1.8} /> Services 
      </a>

      <a href="https://github.com/orgs/annotorious/discussions">
        <MessagesSquare size={22} strokeWidth={1.8} /> Community 
      </a>

      <a href="https://github.com/annotorious/annotorious">
        <Github size={22} /> Github 
      </a>
    </header>

    <GridPattern />
    
    <SplashDemo client:only="react" />

    <div class="container">
      <div class="hero">
        <div class="glow" />

        <h1 class="text-shadow">Annotorious<span class="sr-only"> - Image Annotation Library for JavaScript, TypeScript and React</span></h1> 

        <p class="text-shadow">
          Add image annotation to your site 
          with a few lines of code - JavaScript, TypeScript, React.
        </p> 

        <div class="cta">
          <a href="/getting-started" class="clickable">
            <span>Get Started</span> <ArrowRight size={22} />
          </a>
        </div>
      </div>

      <div class="section clickable">
        <h2 class="sr-only">
          JavaScript Image Annotation Made Simple
        </h2>

        <div class="card-grid">
          <Card 
            title="Integrate Anywhere" 
            text="Get started quickly with minimal setup. Annotorious is client-only, with no server-side dependencies.">
            <Puzzle size={20} color="#44af69" />
          </Card>

          <Card 
            title="Customize" 
            text="Create your own look & feel. Define data-driven styles. Plug in your own tooltip, popup and editor components.">
            <Wrench size={20} color="#f8333c"/>
          </Card>

          <Card 
            title="Build" 
            text="A comprehensive JavaScript API that has everything you need to build your own, tailor-made annotation applications.">
            <Rocket size={20} color="#fcab10"/>
          </Card>

          <Card 
            title="Use Everywhere" 
            text="Annotorious works on desktop and mobile devices and supports touch interaction.">
            <MonitorSmartphone size={20} color="#2b9eb3"/>
          </Card>
        </div>
      </div>

      <div class="section">
        <div class="framework-logos">
          <img src="/images/logo-js.svg" alt="JavaScript support for image annotation" /> 
          <img src="/images/logo-ts.svg" alt="TypeScript image annotation with full type safety" /> 
          <img src="/images/logo-react.svg" alt="React bindings for image annotation components" />
        </div>
        
        <p class="narrow center">
          Built with TypeScript for type-safe image annotation development. Official React bindings 
          make React image annotation integration simple. JavaScript developers can use it directly 
          via npm or CDN. Works with OpenSeadragon for deep zoom images and IIIF.
        </p>

        <CodeCarousel client:only="react" />
      </div>

      <div id="professional-services" class="section center get-support">
        <h2>Professional Support & Consulting</h2>

        <p class="narrow">
          Annotorious is <a href="https://github.com/annotorious/annotorious/blob/main/LICENSE" target="_blank">open 
          source</a> and free for personal and commercial use. For projects with production requirements, timelines, or institutional constraints, I offer consulting and professional support for <strong>integration</strong>, <strong>customization</strong>, and <strong>feature development</strong>.
        </p>

        <div class="get-support-contact">
          <div class="cta secondary">
            <a href="https://calendly.com/rainer-rainersimon/annotorious-consultation">
              Book a 20-min Consultation
            </a>
          </div>

          <cta class="cta tertiary">
            <a href="mailto:hello@rainersimon.io">
              <span>Email an inquiry</span>
            </a>
          </cta>
        </div>
      </div>

      <div class="section center get-support" style="border-top:1px solid #e2e2e2;">
        <img 
          style="width:80px;height:80px;border-radius:9px;margin-top:120px;"
          src="/images/annotorious-touch-icon.png" 
          alt="Annotorious logo"/>

        <h2 style="margin-top:1rem">Serverless Storage</h2>

        <p class="narrow" style="padding-top:0.5rem;">
          Focus on building great annotation experiences, not managing infrastructure.
        </p>

        <p class="narrow" style="padding-top:0.5rem;max-width:80ch;">
          Annotorious Serverless is an upcoming service providing zero-configuration 
          backend storage for your annotations. Just grab your API key, connect your Annotorious 
          instance, and get your annotations stored in the cloud automagically. Perfect for 
          everything from quick prototypes to production deployments.
        </p>

        <a 
          style="font-weight:500;color:#222222;font-size:1.25rem;"
          href="https://waitlister.me/p/annotorious-serverless-storage">Join the waitlist</a>
      </div>

      <div class="section center">
        <h2>Supporters</h2>

        <div class="supporter-logos">
          <a id="logo-performant" title="Performant Software" href="https://www.performantsoftware.com/">
            <img src="/images/supporter-performant.svg" /> 
          </a>

          <a id="logo-luna" title="Luna Imaging" href="https://www.lunaimaging.com/">
            <img class="dark" src="/images/supporter-luna.jpg" /> 
          </a>
        </div>
      </div>
    </div>

    <footer>
      <p>
        &copy; {new Date().getFullYear()} 
        &centerdot;
        <a href="https://rainersimon.io">Rainer Simon</a>
        &centerdot; BSD-3-Clause License
      </p>

      <p>
        Need help? Join the <a href="https://github.com/orgs/annotorious/discussions">Discussion Forum</a>.
      </p>

      <ul>
        <li>
          <Github /> <a href="https://github.com/rsimon">Github</a>
        </li>

        <li>
          <Mastodon /> <a href="https://vis.social/@aboutgeo">Mastodon</a>
        </li>

        <li> 
          <Bluesky /> <a href="https://bsky.app/profile/aboutgeo.bsky.social">Bluesky</a>
        </li>
      </ul>
    </footer>
  </body>
</html>

<style>
  html, body {
    color: #353841;
    font-family: var(--sl-font);
    margin: 0;
    max-width: 100vw;
    overflow-x: hidden;
    padding: 0;
    scroll-behavior: smooth;
    scroll-padding-top: 50px;
  }

  .sr-only {
    	position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border-width: 0;
  }

  .center {
    text-align: center;
  }

  .text-shadow {
    text-shadow: 0 0 4px #ffffff;
  }

  header {
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    padding: 1.5rem 1.2rem;
  }

  @media (min-width: 480px) {

    header {
      box-sizing: border-box;
      display: flex;
      gap: 2.5rem;
      justify-content: flex-end;
      padding: 1.5rem 2rem;
    }

  }

  header a {
    align-items: center;
    color: #353841;
    display: flex;
    gap: 0.325rem;
    text-decoration: none;
  }

  header a.sponsor {
    border: 1.5px solid rgba(53, 56, 65, 0.9);
    border-radius: 1000vw;
    padding: 0.325rem 0.825rem;
  }

  .container {
    box-sizing: border-box;
    margin: 0 auto;
    max-width: 1080px;
    padding: 1rem 1.2rem;
    pointer-events: none;
    position: relative;
  }

  @media (min-width: 480px) {

    .container {
      padding: 1rem 2rem;
    }

  }

  .hero {
    padding: 2rem 0 1rem 0;
    position: relative;
    pointer-events: none;
    text-align: center;
  }

  @media (min-width: 480px) {

    .hero {
      text-align: left;
    }

  }

  .hero .glow {
    background: linear-gradient(90deg, #fcab10 0%, #2b9eb3 80%);   
    filter: blur(80px);
    height: 60%;
    opacity: 0.2;
    position: absolute;
    top: 40%;
    left: -10%;
    pointer-events: none;
    transform: rotate(6deg);
    width: 120%;
    z-index: 0;
  }

  .hero h1 {
    font-family: Megrim;
    font-size: 3.6rem;
    font-weight: 300;
    margin: 0;
    padding: 0;
  }

  .hero p {
    font-size: 1.35rem;
    font-weight: 300;
    line-height: 160%;
    margin: 0;
    max-width: 36ch;
    padding: 1rem 0;
  }

  .clickable {
    pointer-events: all;
  }

  .cta {
    padding: 2rem 0;
    position: relative;
    z-index: 1;
  }

  .cta a {
    align-items: center;
    background-color: #f8942c;
    border-radius: 1000vw;
    color: #fff;
    display: inline-flex;
    font-weight: 600;
    gap: 0.75rem;
    padding: 1rem 1.25rem;
    text-decoration: none;
  }

  .cta.secondary a {
    border: 1px solid #f8942c;
    border-radius: 6px;
    padding-left: 30px;
    padding-right: 30px;
  }

  .cta.secondary a:hover {
    box-shadow: inset 0 0 100px rgba(255, 255, 255, 0.15);
  }

  .cta.tertiary a {
    background-color: #fff;
    border: 1px solid #f8942c;
    border-radius: 6px;
    color: #f8942c;
    padding-left: 30px;
    padding-right: 30px;
  }

  .cta.tertiary a:hover {
    box-shadow: inset 0 0 100px rgba(248, 148, 44, 0.15);
  }

  .section { 
    margin: 5rem 0;
    pointer-events: all;
  }

  .section h2 {
    font-size: 2rem;
    margin: 7rem 0 0 0;
  }

  .section p {
    line-height: 180%;
    margin: 0 auto;
    padding: 2rem 0;
  }
  
  .section p a {
    color: #1a1a1a;
  }

  .section p.narrow {
    max-width: 65ch;
  }

  .card-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    width: 100%;
    margin: 0 auto;
  }

  @media (min-width: 480px) {

    .card-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
  }

  .framework-logos {
    display: flex;
    justify-content: space-between;
    padding: 1.2rem;
  }

  @media (min-width: 480px) {

    .framework-logos {
      gap: 2rem;
      justify-content: center;
      padding: 2rem;
    }

  }

  .framework-logos img {
    height: 4rem;
  }

  :global(.section .expressive-code) {
    margin: 0 auto;
    max-width: 75ch;
  }

  .get-support {
    padding: 0 0 2rem 0;
  }

  .get-support-contact {
    display: flex;
    gap: 1rem;
    justify-content: center;;
  }

  .supporter-logos {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    grid-gap: 0rem;
    margin: 0 auto;
    max-width: 65ch;
  }

  .supporter-logos {
    display: flex;
    flex-direction: column;
    margin: 1rem auto 0 auto;
  }

  .supporter-logos > a {
    align-items: center;
    box-sizing: border-box;
    display: inline;
    justify-content: center;
    margin-top: 0.25rem;
    padding: 1rem;
    width: 100%;
  }

  .supporter-logos img {
    box-sizing: border-box;
    max-height: 35px;
    width: 80%;
    height: 80%;
    object-fit: contain;
    filter: grayscale(100%);
    transition: filter 0.3s ease;
  }

  .supporter-logos img.dark {
    filter: grayscale(100%) opacity(0.35);
  }

  .supporter-logos a:hover img {
    filter: grayscale(0%);
  }

  @media (min-width: 480px) {

    .supporter-logos {
      display: grid;
      margin: 0 auto;
    }

    .supporter-logos > a {
      display: flex;
      margin-top: 0;
    }

    .supporter-logos img {
       max-height: 50px;
    }

    .supporter-logos > a::before {
      content: '';
      display: block;
      grid-area: 1 / 1 / 2 / 2;
      padding-bottom: 60%;
    }

  }

  footer {
    background-color: rgba(0, 0, 0, 0.85);
    color: #b9b9b9;
    font-weight: 300;
    padding: 2rem;
    text-align: center;
  }

  footer p {
    margin: 0.5rem 0;
    padding: 0;
  }

  footer a {
    color: #fff;
  }

  footer ul {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    justify-content: center;
    list-style-type: none;
    margin: 0 auto;
    padding: 1rem 0 0 0;
    width: fit-content;
  }

  @media (min-width: 480px) {

    footer  ul {
      align-items: center;
      flex-direction: row;
      margin: 0;
      padding: 4rem 0 0 0;
      width: auto;
    }

  }

  footer li {
    color: #fff;
    display: flex;
    gap: 0.5rem;
  }

  footer li a {
    text-decoration: none;
  } 

  footer li a:hover {
    text-decoration: underline;
  }

  .chatbot-embed {
    position: relative;
    z-index: 10;
  }
</style>