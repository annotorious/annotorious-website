---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { SplashDemo } from '../components/SplashDemo';

import '../index.css';
---
<StarlightPage frontmatter={{ 
  template: 'splash', 
  title: 'JavaScript Image Annotation',
  hero: {
    tagline: 'Add image annotation functionality to your website or app <br/> with a few lines of JavaScript.',
    actions: [{
      text: 'Get Started',
      link: '/getting-started',
      icon: 'right-arrow'
    }]
  }}}>
  
  <div class="glow" />
    
  <div class="mock-browser">
    <div class="mock-browser-toolbar">
      <div class="input">Annotorious Demo</div>
    </div>

    <SplashDemo client:only="react" />
  </div>
</StarlightPage>

<style>
  :global(body) {
    background-color: #f3f4f6;
  }

  :global(.hero, .hero *) {
    align-items: center;
    display: flex;
    justify-content: center;
    text-align: center;
  }

  :global(.hero) {
    padding-block: clamp(2.5rem, calc(1rem + 4vmin), 8rem);
  }

  :global(.sl-container) {
    position: relative;
  }

  .glow {
    aspect-ratio: 10/5;
    background: 
      linear-gradient(90deg, rgb(246, 158, 28) 0%, rgb(220, 40, 40) 26.5625%, rgb(39, 100, 235) 64%, rgb(22, 163, 74) 100%);   
    filter: blur(100px);
    opacity: 0.5;
    position: absolute;
    width: 100%;
  }

  .mock-browser {
    box-shadow: 0 0.1em 1.5em 0 rgba(0, 0, 0, 0.12);
    border-radius: 0.75rem;
    position: relative;
  }

  .mock-browser-toolbar {
    align-items: center;
    background-color: #e1e1e1;
    border-radius: 0.75rem 0.75rem 0 0;
    box-shadow: 0 4px 4px -4px rgba(0, 0, 0, 0.12);
    display: flex;
    height: 3rem;
    position: relative;
    z-index: 1;
  }
  
  .mock-browser-toolbar:before {
    display: block;
    position: absolute;
    content: '';
    top: 1.25rem;
    left: 1.25em;
    width: 0.5em;
    height: 0.5em;
    border-radius: 50%;
    background-color: #000;
    box-shadow: 0 0 0 2px #000, 1.5em 0 0 2px #000, 3em 0 0 2px #000;
    opacity: 0.3;
  }

  .mock-browser-toolbar .input {
    background-color: rgba(255, 255, 255, 0.5);
    border-radius: 0.25rem;
    display: block;
    font-size: 1rem;
    font-weight: 600;
    margin: 0 auto;
    width: 60%;
    padding: 0.125rem 1rem;
  }
</style>
