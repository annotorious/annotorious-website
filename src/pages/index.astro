---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { SplashDemo } from '../components/SplashDemo';

import '../index.css';
---
<StarlightPage frontmatter={{ 
  template: 'splash', 
  title: 'JavaScript Image Annotation',
  hero: {
    tagline: 'Add image annotation functionality to your website or app with a few lines of JavaScript.',
    actions: [{
      text: 'Get Started',
      link: '/getting-started',
      icon: 'right-arrow'
    }]
  }}}>
      
  <SplashDemo client:only="react" />
</StarlightPage>

<style>
  :global(.hero, .hero *) {
    align-items: center;
    display: flex !important;
    justify-content: center;
    text-align: center;
  }

  :global(.hero) {
    padding-block: clamp(2.5rem, calc(1rem + 4vmin), 8rem);
  }

  :global(.sl-container) {
    position: relative;
  }
</style>
